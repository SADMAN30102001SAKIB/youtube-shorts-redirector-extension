{
  "manifest_version": 3,
  "name": "YouTube Shorts Redirector",
  "version": "1.0",
  "description": "Redirects YouTube Shorts to watch page and sets playback speed to 2x.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://www.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "YT Shorts Redirector",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_popup": "popup.html"
  }
}
